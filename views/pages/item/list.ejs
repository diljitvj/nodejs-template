<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
    <main>
      <h1>Item list</h1>
      <table class="table">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Description</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(item) { %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.description %>
            </td>
            <td>
              <a href="<%= '/items/' + item.id %>">View</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="align-center">
        <a
          class="button-outline vertical-middle  <%= !pageInfo.hasPrevPage ? 'disabled': '' %>"
          href="<%= pageInfo.hasPrevPage ? '/items?pageNumber=' + (pageNumber - 1): '#' %>"
          ><</a
        >
        <span class="page-info vertical-middle "
          ><%= pageInfo.pageNumber%> / <%= pageInfo.totalPages%></span
        >
        <a
          class="button-outline vertical-middle  <%= !pageInfo.hasNextPage ? 'disabled': '' %>"
          href="<%= pageInfo.hasNextPage ? '/items?pageNumber=' + (pageNumber + 1): '#' %>"
          >></a
        >
      </div>
    </main>
    <% include ../../partials/footer %>
  </body>
</html>
