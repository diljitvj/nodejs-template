<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
    <main>
      <h1>User list</h1>
      <table class="table">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Email</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <a href="<%= '/users/' + user.id %>">View</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="align-center">
        <a
          class="button-outline vertical-middle  <%= !pageInfo.hasPrevPage ? 'disabled': '' %>"
          href="<%= pageInfo.hasPrevPage ? '/users?pageNumber=' + (pageInfo.pageNumber - 1): '#' %>"
          ><</a
        >
        <span class="page-info vertical-middle "
          ><%= pageInfo.pageNumber%> / <%= pageInfo.totalPages%></span
        >
        <a
          class="button-outline vertical-middle  <%= !pageInfo.hasNextPage ? 'disabled': '' %>"
          href="<%= pageInfo.hasNextPage ? '/users?pageNumber=' + (pageInfo.pageNumber + 1): '#' %>"
          >></a
        >
      </div>
    </main>
    <% include ../../partials/footer %>
  </body>
</html>
